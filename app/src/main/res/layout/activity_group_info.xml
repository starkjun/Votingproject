<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_group_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yongjunxiao.voting.Activity.GroupInfo">

    <include layout="@layout/layout_toolbar" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/invitation"
        android:background="@drawable/invite" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="群组名称"
            android:textColor="#1fa159"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="群名"
            android:textColor="#000"
            android:textSize="19sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/group_name"
            android:layout_marginTop="10dp"
            android:background="#b3b0b0" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="群组ID"
            android:textColor="#1fa159"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/group_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="ID"
            android:textColor="#000"
            android:textSize="19sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/group_id"
            android:layout_marginTop="10dp"
            android:background="#b3b0b0" />

        <RelativeLayout
            android:id="@+id/group_member"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/group_id"
            android:layout_marginTop="10dp">

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/group_member"
            android:background="#b3b0b0" />

        <RelativeLayout
            android:id="@+id/group_dismiss"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/group_member"
            android:layout_marginTop="20dp"
            android:background="#7ae4e0e0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="退出群组"
                android:textColor="#ff0505"
                android:textSize="17sp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
